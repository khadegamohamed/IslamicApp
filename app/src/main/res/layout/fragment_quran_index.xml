<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/quran_yellow"
    tools:context=".ui.quran.quranIndex.QuranIndexFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="25dp"
        android:padding="8dp"
        android:background="@color/quran_green"
        android:backgroundTint="@color/quran_green">

        <EditText
            android:enabled="false"
            android:focusable="true"
            android:clickable="true"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:layout_width="match_parent"
            android:id="@+id/search_quran_edit_text"
            android:layout_height="match_parent"/>
     </androidx.cardview.widget.CardView>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/quran_index_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/quran_yellow"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/quran_index_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</LinearLayout>